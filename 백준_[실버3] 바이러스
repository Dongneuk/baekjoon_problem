import sys
from collections import deque
input = sys.stdin.readline

n = int(input())
k = int(input())
graph = [[] for _ in range(n+1)]

for _ in range(k):
    a, b = map(int, input().split())
    graph[a].append(b)
    graph[b].append(a)


visited = [False] * (n+1)
cnt = 0
def dfs(start):
    global cnt
    visited[start] = True

    for v in graph[start]:
        if not visited[v]:
            cnt += 1
            dfs(v)

    return cnt

print(dfs(1))